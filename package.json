{
  "type": "commonjs",
  "name": "restaurant-studia",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.js --external:bcrypt && npm run prisma",
    "dev": "tsx watch src/index.ts",
    "prisma": "npx prisma generate && npx prisma migrate deploy && npx prisma db seed"
  },
  "prisma": {
    "seed": "ts-node src/db/seed.ts",
    "schema": "src/db/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "bcrypt": "^6.0.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "pdfkit": "^0.17.1",
    "pug": "^3.0.3",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/node": "^22.14.1",
    "@types/pdfkit": "^0.13.9",
    "esbuild": "^0.25.5",
    "prisma": "^6.6.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "private": true
}
